                    <Grid>
                        <Grid.RowDefinitions>

                            <RowDefinition Height="Auto"></RowDefinition>

                            <RowDefinition Height="Auto"></RowDefinition>

                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="Auto"></ColumnDefinition>

                            <ColumnDefinition Width="Auto"></ColumnDefinition>

                        </Grid.ColumnDefinitions>

            
                <controls:ImageButton 
                    Text="Comprar tiempo" 
                    BackgroundColor="#1976D2" 
                    TextColor="#ffffff" 
                    
                    HeightRequest="150" 
                    WidthRequest="150" 
                    Source="ic_timer" 
                    ImageTintColor="White"
                    Orientation="ImageOnTop" 
                    
                    ImageHeightRequest="120" 
                    ImageWidthRequest="120" 
                    Command="{Binding ParquearCommand}"
                    Grid.Column="1" Grid.Row="1"
                    />
                <controls:ImageButton 
                    Text="Registrar Vehìculo" 
                    BackgroundColor="#1976D2" 
                    TextColor="#ffffff" 
                    HeightRequest="150" 
                    WidthRequest="150" 
                    Source="ic_Carro" 
                    ImageTintColor="White" 
                    Orientation="ImageOnTop"  
                    ImageHeightRequest="120" 
                    ImageWidthRequest="120" 
                    Command="{Binding CarrosCommand}"
                    Grid.Column="2" Grid.Row="1"
                   />
                <controls:ImageButton 
                    Text="Registrar Tarjeta" 
                    BackgroundColor="#1976D2"
                    TextColor="#ffffff"
                    HeightRequest="150" 
                    WidthRequest="150" 
                    Source="ic_Tarjeta_Credito"
                    ImageTintColor="White"
                    Orientation="ImageOnTop"  
                    ImageHeightRequest="120"
                    ImageWidthRequest="120" 
                    Command="{Binding PrepagoCommand}"
                    Grid.Column="1" Grid.Row="2"
                    />
                <controls:ImageButton 
                    Text="Buscar Plazas"
                    BackgroundColor="#1976D2"
                    TextColor="#ffffff" 
                    HeightRequest="150" 
                    WidthRequest="150" 
                    Source="ic_place"
                    Orientation="ImageOnTop"
                    ImageTintColor="White"
                    ImageHeightRequest="120"
                    ImageWidthRequest="120"
                    Command="{Binding VerificaPlazasCommand}"
                    Grid.Column="2" Grid.Row="2"
                    />
                        
